<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pulsing_button2"
    android:layout_width="@dimen/pulsing_button_width"
    android:layout_height="@dimen/pulsing_button_height">

    <naihebaver.policeassistantapp.PulsingButton.PulsingButtonBackground
        android:id="@+id/pulsing_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <naihebaver.policeassistantapp.PulsingButton.PulsingButtonTextView
        android:id="@+id/pulsing_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/click_me"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold"/>


</RelativeLayout>